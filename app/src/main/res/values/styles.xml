<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Parent Frame Layout style. -->
    <style name="frame_layout_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Fragment's GridView style. -->
    <style name="gridview_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:verticalSpacing">@dimen/grid_view_spacing</item>
        <item name="android:horizontalSpacing">@dimen/grid_view_spacing</item>
    </style>

    <!-- Detailed movie activity styles.-->
    <!-- Movie title text style.-->
    <style name="movie_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingBottom">@dimen/standard_padding</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/movie_title_text_size</item>
    </style>

    <!-- Parent Linear Layout (parent layout for poster image).-->
    <style name="linear_parent_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Movie poster style. -->
    <style name="movie_poster">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/zero_width</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">@dimen/standard_padding</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <!-- Linear Layout parent for release date and rating. -->
    <style name="linear_layout_parent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/zero_width</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Release date text style (and movie rating style as well). -->
    <style name="release_date_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/zero_width</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingRight">@dimen/standard_padding</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Actual release date value text style (and actual movie rating as well). -->
    <style name="actual_release_date_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/zero_width</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Overview style. -->
    <style name="overview_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">@dimen/movie_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Horizontal line divider style. -->
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- Trailer style. -->
    <style name="trailer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Review button and add to favorites button styles. -->
    <style name="buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Play icon style. -->
    <style name="play_icon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>



</resources>
